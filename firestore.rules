rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    match /timers/{timerId} {
      allow read, write: if true;
    }
    
    match /timer_expirations/{timerId} {
      allow read, write: if true;
    }
    
    match /timer_logs/{logId} {
      allow read, write: if true;
    }
    
    match /team_broadcasts/{broadcastId} {
      allow read, write: if true;
    }
  }
}