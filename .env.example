# Core service defaults for local development
NODE_ENV=development
PORT=4000
LOG_LEVEL=info

# Database configuration (Postgres via docker-compose.dev.yml)
DATABASE_URL=postgres://minoots:development@localhost:5432/minoots
TEST_DATABASE_URL=postgres://minoots:development@localhost:5432/minoots
PGUSER=minoots
PGPASSWORD=development
PGHOST=localhost
PGPORT=5432
PGDATABASE=minoots

# Horology kernel connectivity
KERNEL_GRPC_URL=localhost:50051
KERNEL_GATEWAY_MODE=grpc
KERNEL_STORE=postgres
KERNEL_DATABASE_URL=postgres://minoots:development@localhost:5432/minoots
KERNEL_RAFT_NODE_ID=1
KERNEL_RAFT_ADDR=0.0.0.0:7207
KERNEL_RAFT_PEERS=1=http://127.0.0.1:7207
KERNEL_RAFT_ELECTION_MIN_MS=300
KERNEL_RAFT_ELECTION_MAX_MS=600
KERNEL_RAFT_HEARTBEAT_MS=100
# Postgres-backed coordinator defaults (used when KERNEL_RAFT_NODE_ID is unset)
KERNEL_NODE_ID=kernel-local
KERNEL_RAFT_ELECTION_TIMEOUT_MS=1500

# NATS JetStream configuration
NATS_URL=nats://localhost:4222
NATS_JETSTREAM_STREAM=MINOOTS_TIMER
NATS_JETSTREAM_CONSUMER=ACTION_ORCHESTRATOR
NATS_QUEUE_GROUP=action-orchestrator
NATS_DLQ_SUBJECT=MINOOTS_TIMER.dlq
NATS_SUBJECT=minoots.timer.fired

# Control plane policy seeds for local testing (JSON array)
CONTROL_PLANE_SEED_API_KEYS=[{"tenantId":"tenant-local","tenantName":"Local Development","apiKey":"local-dev-key","apiKeyName":"Local Development Console","roles":["timer.read","timer.write","timer.cancel","tenant.admin"],"dailyTimerLimit":50,"burstTimerLimit":3}]
# OpenTelemetry exporter endpoint (otel collector from docker-compose)
OTEL_EXPORTER_OTLP_ENDPOINT=http://localhost:4318/v1/traces
OTEL_SERVICE_NAME=minoots-control-plane
