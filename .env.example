# === MINOOTS Local Stack Configuration ===
# Copy this file to `.env` and adjust values for your environment.

# Control plane authentication/billing toggles
CONTROL_PLANE_AUTH_MODE=anonymous
USAGE_TRACKER_BACKEND=memory
API_KEY_BACKEND=memory
CONTROL_PLANE_ENABLE_BILLING=false
CONTROL_PLANE_PUBLIC_ROUTES=/healthz,/docs,/pricing
CONTROL_PLANE_ANON_USER_ID=local-dev-user
CONTROL_PLANE_ANON_TIER=anonymous

# Stripe configuration (only required when billing is enabled)
# STRIPE_SECRET_KEY=sk_test_your_key

# Firebase configuration (set CONTROL_PLANE_AUTH_MODE=firebase when enabling)
# FIREBASE_PROJECT_ID=your-project
# GOOGLE_APPLICATION_CREDENTIALS=/path/to/service-account.json

# Kernel connectivity
KERNEL_GRPC_URL=localhost:50051
KERNEL_GATEWAY_MODE=grpc

# Action orchestrator
KERNEL_EVENT_TENANT_ID=__all__
